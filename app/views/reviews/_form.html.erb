<%= form_for([@book, @review]) do |form| %>


<%= form.hidden_field :user_id %>
<%= form.hidden_field :book_id %>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating %>

  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
