<!DOCTYPE html>
<p id="notice"><%= notice %></p>


<% if current_user.moderator? %>
<body>
<h1>Reviews</h1>

<table id="reviews-index-container">
  <thead>
    <tr>
      <th>#</th>
      <th>Author</th>
      <th>Book</th>
      <th>Reviewer</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <% if review.moderated? %>
      <tr id="done_row">
        <td id="review_id"><%= review.id %></div>
        <td><%= review.book.user.full_name %></td>
        <td><%= review.book.title %></td>
        <td><%= review.user.full_name %></td>
        <td><%= review.comment.html_safe %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% else %>
      <tr id="row">
        <td id="review_id"><%= review.id %></div>
        <td><%= review.book.user.full_name %></td>
        <td><%= review.book.title %></td>
        <td><%= review.user.full_name %></td>
        <td><%= review.comment.html_safe %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>
    <% end %>
  </tbody>
</table>

<br>
<%  else %>
you're not authorized to be here
<% end %>

</body>
