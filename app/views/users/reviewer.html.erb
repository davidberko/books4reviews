<div id="reviewers_search_bar">
  <%= form_tag(reviewers_search_path, method: "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Authors"%>
  <%= submit_tag "Search" %>
<% end %>
</div>

     
 <div id="reviewer_records_container">     
     <div id="reviewer_pagination">
      <%= will_paginate @reviewers_search %>
     </div>
<% @reviewers_search.each do |s| %>
     <div id="reviewer-index-container">


      <%= link_to s.full_name, user_path(s) %>
      <%= image_tag s.avatar_url(:thumb).to_s %>
          
    </div>
  <% end %>
</div>