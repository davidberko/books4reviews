<div id="reviewer_search_bar">
	<%= form_tag(reviewers_search_path, method: "get", id: "search-form") do %>
		<%= text_field_tag :search, params[:search], placeholder: "Search"%>
		<%= submit_tag "Search" %>
	<% end %>
</div>

<div id="reviewer_records_container">
	<div id="reviewer_pagination">
		<%= will_paginate @reviewers_search %>
	</div>
	
	<% @reviewers_search.each do |r| %>

	<div id="reviewer-index-container">
	  <%= link_to r.full_name, user_path(r) %>
	  <%= image_tag r.avatar_url(:thumb).to_s %><br />
	</div>
	<% end %>
</div>