<%= tinymce_assets %>

<body>
<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="new-book-form">
    <div class="field">

      <%= form.hidden_field :user_id %>
    </div>

    <div class="cover-art">
      <%= form.label "Book cover" %>
      <%= form.file_field :avatar %>
    </div>

    <div class="title_field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <p id="amazon-link">**Please be sure to include your link to your book on Amazon in the description. Thank you.**</p>

    <div class="text_field">
      <%= form.label :description %>
      <%= form.text_area :description, :class => "tinymce", :rows => 20, :cols => 120 %>
    </div>

    <div class="genres-field">
    <% @genres.each_with_index do |genre, i| %>
      <%= check_box_tag "book[genre_ids][#{i}]", genre.id %>
      <%= label_tag "book[genre_ids][#{i}]", genre.name %>
    <% end %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
<% end %>
<script>
tinymce.init({
  selector: 'textarea',
  plugins: [ 'code', 'lists', 'autolink' ],
  toolbar: [ 'link', 'undo', 'bold', 'italic', 'styleselect' ]
  mobile: {
    theme: 'mobile',
    plugins: [ 'autosave', 'lists', 'autolink' ],
    toolbar: [ 'link', 'undo', 'bold', 'italic', 'styleselect' ]
    }
  });

</script>
</body>
<%= tinymce %>
