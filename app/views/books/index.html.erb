
<h1 id="books_index_header">Books</h1>

<div id="books_pagination">
  <%= will_paginate @books %>
</div>

<table id="books-table">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to image_tag(book.avatar_url(:small).to_s), book %></td>
        <td><b><%= link_to book.user.full_name, book.user %></b></td>
        <td><b><%= book.title %></b></td>
        <td>
         <p><%=  truncate(book.description, :ommision => "...", :length => 200, escape: false) %></p>
       </td>
        <td><%= link_to image_tag("icons8-forward-24.png"), book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
