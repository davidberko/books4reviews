<p id="notice"><%= notice %></p>

<% if current_user.reviewer? %>

<h1>Books</h1>

<%= link_to "genres", genres_path %>
<table>
  <thead>
    <tr>
      <th>Cover</th>
      <th>Author</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.avatar_url(:small).to_s %></td>
        <td><b><%= book.user.first_name + " " + book.user.last_name %></b></td>
        <td><b><%= book.title %></b></td>
        <td><%= book.description.html_safe %></td>
        <td><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% else %>
You are not authorized
<% end %>
