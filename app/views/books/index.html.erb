<p id="notice"><%= notice %></p>


<h1>Books</h1>

<%= will_paginate @books %>


<table id="books-table">
  <thead>
    <tr>
      <th>Cover</th>
      <th>Author</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.avatar_url(:small).to_s, class: "img-fluid" %></td>
        <td><b><%= book.user.first_name + " " + book.user.last_name %></b></td>
        <td><b><%= book.title %></b></td>
        <td>
         <p><%=  truncate(book.description, :ommision => "...", :length => 200, escape: false) %></p>
       </td>
        <td><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
