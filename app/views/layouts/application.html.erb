<!DOCTYPE html>
<html>
  <head>
    <title>Books4reviews</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav>
    <li><%= link_to "Books4Reviews", root_path %></li>
    <li><%= link_to "Books", books_path %></li>
    <li><%= link_to "Genres", genres_path %></li>
    <li><%= link_to "Reviewers", reviewers_path %></li>
    <li><%= link_to "Authors", authors_path %></li>


    <% if current_user %>
    <ul>
      <li><%= link_to "Profile", current_user_path %></li>
      <li><%= link_to "Manage Account", edit_user_path(current_user) %></li>
      <li><%= link_to "log out", destroy_user_session_path, method: :delete %></li>
    </ul>

    <% end %>
  </nav>

  <body>

    <%= yield %>
  </body>
</html>
